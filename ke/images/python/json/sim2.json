{
    "apiVersion":"v1beta1",
    "desiredState":{
        "manifest":{
            "containers":[
                {
                    "command":[
                        "/bin/bash",
                        "/home/opensim80/bin/ke/start_opensim_xxx.sh"
                    ],
                    "cpu":1024,
                    "env":[
                        {
                            "name":"SIM_NAME",
                            "value":"sim2"
                        },
                        {
                            "name":"SIM_PORT",
                            "value":8802
                        },
                        {
                            "name":"INI_MASTER",
                            "value":"/home/opensim80/bin/ke/grid/conf/OpenSimDefaults.ini"
                        },
                        {
                            "name":"INI_FILE",
                            "value":"/home/opensim80/bin/ke/grid/conf/OpenSim.ini"
                        },
                        {
                            "name":"LOG_CONFIG",
                            "value":"/home/opensim80/bin/ke/grid/conf/OpenSim.exe.config"
                        },
                        {
                            "name":"PID_FILE",
                            "value":"/home/opensim80/bin/ke/grid/instances/sim2.pid"
                        },
                        {
                            "name":"LOG_FILE",
                            "value":"/home/opensim80/bin/ke/grid/instances/sim2.log"
                        }
                    ],
                    "image":"docker-registry:5000/ubuntu:opensim",
                    "memory":1000000000,
                    "name":"opensim",
                    "ports":[
                        {
                            "containerPort":8802,
                            "hostPort":8802,
                            "protocol":"TCP"
                        },
                        {
                            "containerPort":9050,
                            "hostPort":9050,
                            "protocol":"UDP"
                        },
                        {
                            "containerPort":9051,
                            "hostPort":9051,
                            "protocol":"UDP"
                        },
                        {
                            "containerPort":9060,
                            "hostPort":9060,
                            "protocol":"UDP"
                        },
                        {
                            "containerPort":9061,
                            "hostPort":9061,
                            "protocol":"UDP"
                        }
                    ],
                    "volumeMounts":[
                        {
                            "mountPath":"/home/opensim80/bin/ke",
                            "name":"opensim-ke",
                            "readOnly":false
                        },
                        {
                            "mountPath":"/home/opensim80/bin/config-include",
                            "name":"opensim-config",
                            "readOnly":false
                        },
                        {
                            "mountPath":"/home/opensim80/bin/opensim_data",
                            "name":"opensim-data",
                            "readOnly":false
                        }
                    ]
                }
            ],
            "id":"sim2",
            "version":"v1beta1",
            "volumes":[
                {
                    "name":"opensim-ke",
                    "source":{
                        "hostDir":{
                            "path":"/volumes/opensim_resources/ke"
                        }
                    }
                },
                {
                    "name":"opensim-config",
                    "source":{
                        "hostDir":{
                            "path":"/volumes/opensim_resources/config-include"
                        }
                    }
                },
                {
                    "name":"opensim-data",
                    "source":{
                        "hostDir":{
                            "path":"/volumes/opensim_resources/opensim_data"
                        }
                    }
                }
            ]
        }
    },
    "id":"sim2",
    "kind":"Pod",
    "labels":{
        "name":"opensim-pod"
    }
}