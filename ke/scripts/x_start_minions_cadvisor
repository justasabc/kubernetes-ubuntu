#/bin/sh

# add minion here
minions=(minion1 minion2 minion3)
kube_root=/root

for m in "${minions[@]}" ;do
	echo "====================================="
	echo "cleaning $m..."
	# manually run scripts
	scp start_cadvisor.sh $m:$kube_root
	scp stop_cadvisor.sh $m:$kube_root

	ssh $m  "cd $kube_root && ./stop_cadvisor.sh && ./start_cadvisor.sh"
	echo "curl -L $m:881"
done
